<h1>Chats</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
    <tr>
      <td>
      <%= chat.text%>
      </td>
    </tr>
      <tr>
        <td><%= link_to 'Show', api_v1_user_task_chat_path(current_user, @task, chat) %></td>
        <td><%= link_to 'Edit', edit_api_v1_user_task_chat_path(current_user, @task, chat) %></td>
        <td><%= link_to 'Destroy', api_v1_user_task_chat_path(current_user, @task, chat), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chat', new_api_v1_user_task_chat_path(current_user, @task) %>
