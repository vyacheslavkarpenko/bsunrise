<%= form_for(task) do |f| %>

  <p>
    <%= label_tag(:name, 'Name') %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= label_tag(:description, 'Description') %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= label_tag(:parent_task_id, 'Select parent task') %>
    <%= f.select :parent_task_id, @user_tasks.collect { |t| [t.name, t.id]}, @html_options %>
  </p>

  <p class="actions">
    <%= f.submit %>
  </p>
<% end %>
