<% content_for :index_tasks, 'Tasks page' %>
<div class="tasks-index">
  <h1>Tasks</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.description %></td>
          <td><%= link_to 'Show', api_v1_user_task_path(id: task.id) %></td>
          <td><%= link_to 'Edit', edit_api_v1_user_task_path(user_id: current_user.id, id: task.id) %></td>
          <td><%= link_to 'Destroy', api_v1_user_task_path(user_id: current_user.id, id: task.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <%= link_to 'New Task', new_api_v1_user_task_path(user_id: current_user.id) %>
</div>